<% content_for :title do %>
  Dear MailSnag Support,<br/>
  New inquiry came from MailSnag landing page
<% end %>

<% content_for :body do %>
  <table width="100%">
    <tr>
      <td width="40%">* Inquiry type:</td>
      <td><%= @inquiry %></td>
    </tr>
    <tr>
      <td>* Sender name:</td>
      <td><%= @name %></td>
    </tr>
    <tr>
      <td>* Sender e-mail:</td>
      <td><%= @email %></td>
    </tr>
    <tr>
      <td>Company:</td>
      <td><%= @company %></td>
    </tr>
    <tr>
      <td>Subject:</td>
      <td><%= @subject %></td>
    </tr>
    <tr>
      <td colspan="2"><br/></td>
    </tr>
    <tr>
      <td colspan="2">* <%= @message %></td>
    </tr>
  </table>
<% end %>
